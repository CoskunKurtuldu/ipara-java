<?xml version='1.0' encoding='UTF-8' ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="test.htm">testController</prop>
                <prop key="ThreeDResultFail.htm">threeDResultFailController</prop>
                <prop key="ThreeDResultSuccess.htm">threeDResultSuccessController</prop>
                <prop key="binInquiry.htm">binInquiryController</prop>
                <prop key="ApiPayment.htm">ApiPaymentController</prop>
                <prop key="PaymentInqury.htm">PaymentInquryController</prop>
                <prop key="AddCardToWallet.htm">AddCardToWalletController</prop>
                <prop key="GetCardFromWallet.htm">GetCardFromWalletController</prop>
                <prop key="DeleteCardFromWallet.htm">DeleteCardFromWalletController</prop>
                <prop key="ApiPaymentWithWallet.htm">ApiPaymentWithWalletController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    
    <bean name="testController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="test" />  
          
    <bean name="threeDResultFailController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="threeDResultFail" />  
          
    <bean name="threeDResultSuccessController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="threeDResultSuccess" />   
          
    <bean name="binInquiryController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="binInquiry" />   
          
    <bean name="ApiPaymentController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="ApiPayment" />
          
    <bean name="PaymentInquryController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="PaymentInqury" />
          
    <bean name="AddCardToWalletController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="AddCardToWallet" />

    <bean name="GetCardFromWalletController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="GetCardFromWallet" />

    <bean name="DeleteCardFromWalletController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="DeleteCardFromWallet" />

    <bean name="ApiPaymentWithWalletController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="ApiPaymentWithWallet" />

</beans>
